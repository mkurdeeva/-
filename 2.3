#include <iostream>
using namespace std;

int main()
{
    double m = 0, l = 0, d = 0, t = 0;
    float g = 9.81;
    cout << "Введите значение массы самолета m:" << endl;
    cin >> m;
    if (m == 0) {
        cout << "Введите корректные данные!";
        return 1;
    }
    cout << "Введите значение подъемной силы L:" << endl;
    cin >> l;
    cout << "Введите значение сопротивления D:" << endl;
    cin >> d;
    cout << "Введите значение тяги двигателя T:" << endl;
    cin >> t;
    cout << "Ускорение по направлению движения равняется: " << (t - d) / m << endl;
    cout << "Вертикальное ускорение равняется: " << (l - m * g) / m << endl;
    return 0;
}
